<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Roofy</title>
    
    <!-- styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="./styles.css" />

  </head>
  <body>
    <%- include('include/navbar'); %>

    <!-- insert other things here like jquery and shit -->
    <div style="margin-top: 40px;"></div>

    <!-- This loop each listing and show it in the table -->
    <div class="container" style="margin-top: 20px;">
      <h1>Bookmarks</h1>
      <div class="row row-cols-1 row-cols-md-3 g-4">
    <%
        var no = 1
        try {
        data.data.forEach((listing) => { 
    %>
    
        <div class="col">
          <div class="card h-100">
              <img src="/images/listings/<%= listing.image %>" class="card-img-top" alt="">
              <div class="card-body">
                  <h5 class="card-title"><%= listing.title %></h5>
                  <p class="card-text"><%= listing.listing_address %></p>
                  <p class="card-text"><%= listing.description %></p>
              </div>
              <div class="card-footer">
                <a href="/listing/<%= listing.listing_id %>" class="btn btn-primary">Learn More</a>
                <button onclick = "deleteBookmark('<%= listing.listing_id %>');" class="btn btn-danger" id="bookmark_<%= listing.listing_id %>">&hearts;</button>
              </div>
          </div>
        </div>
      
    <% 
      no = no + 1
        })} catch {
          "<h1>oh no! nothing has been found!</h1>";
        }
    %> 
      </div>
    </div>
    

    <!-- javascript -->
    <script src="js/user.js"></script>
    <script src="js/bookmark.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
