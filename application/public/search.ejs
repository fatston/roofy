<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Roofy</title>
    
    <!-- styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="./styles.css" />

  </head>
  <body>
    <%- include('include/navbar'); %>

    <!-- insert other things here like jquery and shit -->
    <div class="container" style="margin: auto; width: fit-content; margin-top:10px;">
      <div class="card">
      <div class="card-body">
          <form action="search" method="POST" class="row g-3">
            <div class="col-auto" id="saleOrRent">
                <input class="form-check-input" type="radio" name="sale_or_rent" value="SALE" id="SALE" checked>
                <label class="form-check-label">Buy</label>
                <input class="form-check-input" type="radio" name="sale_or_rent" value="RENT" id="RENT">
                <label class="form-check-label">Rent</label>
            </div>
            <div class="col-auto">
              <input type="search" name="search" class="form-control" placeholder="Search" autofocus="autofocus" onFocus="this.select()">
            </div>
            <div class="col-auto">
              <button type="submit" class="btn btn-secondary">Search</button>
            </div>
            <div class="col-auto">
              <select class="form-select" aria-label="Default select example" name="property_type">
                <option selected>Residential</option>
                <option value="hdb">HDB</option>
                <option value="condo">Condo</option>
                <option value="landed">Landed</option>
              </select>
            </div>
            <div class="col-auto">
              <input type="number" class="form-control" name="price_lower_bound" placeholder="Min $$" min="0">
            </div>
              <div class="col-auto">
              <input type="number" class="form-control" name="price_upper_bound" placeholder="Max $$" min="0">
            </div>
            <div class="col-auto">
              <div class="btn-group">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuClickable" data-bs-toggle="dropdown" data-bs-auto-close="false" aria-expanded="false">
                  Rooms
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuClickable">
                  <li class="RENT">
                    <div class="dropdown-item">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="room_rental" id="room-rental">
                        <label class="form-check-label" for="room-rental">
                          Room Rental
                        </label>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="dropdown-item">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="studio" id="studio">
                        <label class="form-check-label" for="studio">
                          Studio
                        </label>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="dropdown-item">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_1room" id="1room">
                        <label class="form-check-label" for="1room">
                          1 Room
                        </label>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="dropdown-item">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_2room" id="2room">
                        <label class="form-check-label" for="2room">
                          2 Rooms
                        </label>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="dropdown-item">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_3room" id="3room">
                        <label class="form-check-label" for="3room">
                          3 Rooms
                        </label>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="dropdown-item">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_4room" id="4room">
                        <label class="form-check-label" for="4room">
                          4 Rooms
                        </label>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="dropdown-item">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_5room" id="5room">
                        <label class="form-check-label" for="5room">
                          5+ Rooms
                        </label>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>


            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- This loop each listing and show it in the table -->
    <div class="container" style="margin-top: 20px;">
      <div class="row row-cols-1 row-cols-md-3 g-4">
    <%
        var no = 1
        try {
        data.data.forEach((listing) => { 
    %>
    
        <div class="col">
          <div class="card h-100">
              <img src="/images/listings/<%= listing.image %>" class="card-img-top" alt="">
              <div class="card-body">
                  <h5 class="card-title"><%= listing.title %></h5>
                  <p class="card-text"><%= listing.listing_address %></p>
                  <p class="card-text"><%= listing.description %></p>
                  <p class="card-text">rooms: <%= listing.rooms %></p>
              </div>
              <div class="card-footer">
                <a href="/listing/<%= listing.listing_id %>" class="btn btn-primary">Learn More</a>                
                <button onclick = "<%= listing.user_id ? 'deleteBookmark' : 'createBookmark'; %>('<%= listing.listing_id %>');" class="btn btn<%= listing.user_id ? '' : '-outline' %>-danger" id="bookmark_<%= listing.listing_id %>">&hearts; <%= listing.countbookmarks %></button>
                
              </div>
          </div>
        </div>

        
      
    <% 
      no = no + 1
        })} catch {
          "<h1>oh no! nothing has been found!</h1>";
        }
    %> 
      </div>
    </div>
    
    

    <!-- javascript -->
    <script>
        //hide rent fields
        updateForm("RENT", "none")

        let saleOrRent = document.querySelector("#saleOrRent");
        saleOrRent.addEventListener('change', function(e) {
            let elem = event.target;
            let type = elem.value;
            let oppType = type == "RENT" ? "SALE" : "RENT";
            updateForm(oppType, "none")
            updateForm(type, "block")
        } )
        
        function updateForm(type, display) {
            const divsToHide = document.getElementsByClassName(type)
            for(var i = 0; i < divsToHide.length; i++){
                divsToHide[i].style.display = display;
            }
        }
    </script>
    <script src="js/user.js"></script>
    <script src="js/bookmark.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
  </body>
</html>
