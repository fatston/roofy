<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Roofy</title>
    
    <!-- styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="./styles.css" />

  </head>
  <body>
    <%- include('include/navbar'); %>

    <!-- insert other things here like jquery and shit -->
    <div style="margin-top: 10px;"></div>
    <div class="container" style="margin: auto; width: fit-content;">
      <div class="card">
      <div class="card-body">
          <form action="search" method="POST" class="row g-3">
            <div class="col-auto">
              <input class="form-check-input" type="radio" name="sale_or_rent" value="sale" checked>
              <label class="form-check-label">Buy</label>
            </div>
            <div class="col-auto">
              <input class="form-check-input" type="radio" name="sale_or_rent" value="rent">
              <label class="form-check-label">Rent</label>
            </div>  
            <div class="col-auto">
              <input type="search" name="search" class="form-control" placeholder="Search" autofocus="autofocus" onFocus="this.select()">
            </div>
            <div class="col-auto">
              <button type="submit" class="btn btn-secondary">Search</button>
            </div>
            <div class="col-auto">
              <select class="form-select" aria-label="Default select example" name="property_type">
                <option selected>Residential</option>
                <option value="hdb">HDB</option>
                <option value="condo">Condo</option>
                <option value="landed">Landed</option>
              </select>
            </div>
            <div class="col-auto">
              <input type="number" class="form-control" name="price_lower_bound" step="100000" placeholder="Min $$">
            </div>
              <div class="col-auto">
              <input type="number" class="form-control" name="price_upper_bound" step="100000" placeholder="Max $$">
            </div>
            <div class="col-auto">
              Beds
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- This loop each listing and show it in the table -->
    <div class="container" style="margin-top: 20px;">
      <div class="row row-cols-1 row-cols-md-3 g-4">
    <% 
        var no = 1
        data.data.forEach((listing) => { 
    %>
    
        <div class="col">
          <div class="card h-100">
              <img src="/images/listings/<%= listing.image %>" class="card-img-top" alt="">
              <div class="card-body">
                  <h5 class="card-title"><%= listing.listing_address %></h5>
                  <p class="card-text"><%= listing.description %></p>
              </div>
              <div class="card-footer">
                <a href="/listing/<%= listing.listing_id %>" class="btn btn-primary">Learn More</a>
              </div>
          </div>
        </div>
      
    <% no = no + 1 %>
    <% }) %>
      </div>
    </div>
    
    

    <!-- javascript -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
  </body>
</html>
